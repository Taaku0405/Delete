<div class="container">
  <h3 class="d-inline-block px-4 mx-5 mb-3 text-primary"><i class="fas fa-gamepad"></i>ゲーム投稿一覧</h3>
  <div>
    <%= link_to new_post_path do %>
    <i class="fas fa-plus-square"></i>
    <i class="text-primary">ゲームを新規投稿する</i>
    <% end %>
  </div>

  <div class="row ml-4 mt-1">
    <%= render "sidebar", genres: @genres %>

      <div class="card-header"><i class="fas fa-ghost"></i>ゲーム投稿</div>
      <table class="table table-borderless">
        <thead class="bg-info">
          <tr>
            <th>投稿ID</th>
            <th>投稿日</th>
            <th>ゲーム名</th>
            <th>ゲームジャンル</th>
            <th>投稿者</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
          <tr>
            <td><%= post.id %></td>
            <td><%= post.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
            <td>
              <%= link_to post_path(post) do %>
              <u class="hover-link"><%= post.name %></u>
              <% end %>
            </td>
            <td><%= post.genre.name %></td>
            <td><%= post.end_user.name %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
  </div>
</div>