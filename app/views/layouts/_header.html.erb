<nav class="navbar navbar-expand-lg">
  <div class="container">
    <div class="navbar-brand">
      <div class="py-1">
        <%= link_to root_path do %>
        <%= image_tag "E.G.C-logo.png", size: "280x70" %>
        <% end %>
      </div>
    </div>

    <% if end_user_signed_in? %>
    <div class="center">
      <p><%= end_user.name %>様おかえりなさいませ！</p>
    </div>
    <% end %>

    <div class="d-flex align-items-end justify-content-center flex-column bg-highlight mb-3 mt-2", style="height: 80px;">
      <ul class="navbar-nav mt-2">

        <% if end_user_signed_in? %>

        <li class="nav-link">
          <%= link_to end_users_path, class: "btn" do %>
          <i class="fas fa-users"></i>ユーザー
          <% end %>
        </li>

        <li class="nav-link ml-3">
          <%= link_to  posts_path, class: "btn" do %>
          <i class="fas fa-gamepad"></i>ゲーム投稿
        <% end %>
        </li>

        <li class="nav-link ml-3">
          <%= link_to groups_path, class: "btn" do %>
           <i class="fas fa-d-and-d"></i>グループ
        <% end %>
        </li>

        <li class="nav-link ml-3">
          <%= link_to <%= link_to destroy_end_user_session_path, class: "btn" do %>
          <i class="fas fa-right-from-bracket"></i>ログアウト
          <% end %>
        </li>

        <% elsif admin_signed_in? %>

        <li class="nav-link">
          <%= link_to admin_posts_path, class: "btn" do %>
          <i class="fas fa-gamepad"></i>ゲーム投稿
          <% end %>
        </li>

        <li class="nav-link ml-3">
          <%= link_to admin_end_users_path, class: "btn" do %>
          <i class="fas fa-users"></i>ユーザー
          <% end %>
        </li>

        <li class="nav-link ml-3">
          <%= link_to admin_genres_path, class: "btn" do %>
          <i class="fas fa-fantasy-flight-games"></i>ジャンル
          <% end %>
        </li>

        <li class="nav-link ml-3">
          <%= link_to destroy_admin_session_path, class: "btn" do %>
          <i class="fas fa-right-from-bracket"></i>ログアウト
          <% end %>
        </li>

        <% else %>

        <li class="nav-link">
          <%= link_to public_homes_about_path, class: "btn" do %>
          <i class="fas fa-critical-role"></i>About
          <% end %>
        </li>

        <li class="nav-link ml-3">
           <%= link_to  posts_path, class: "btn" do %>
           <i class="fas fa-gamepad"></i>ゲーム投稿
           <% end %>
        </li>

        <li class="nav-link ml-3">
          <%= link_to new_end_user_registration_path, class: "btn" do %>
          <i class="fas fa-earth-americas"></i>新規登録
          <% end %>
        </li>

        <li class="nav-link ml-3">
          <%= link_to new_end_user_session_path, class: "btn" do %>
          <i class="fas fa-critical-role"></i>ログイン
          <% end %>
        </li>
        <% end %>
      </ul>

        <div class="search_form my-2">
          <% if admin_signed_in? %>
          <%= form_with method: :get, url: admin_search_path do |f| %>
          <div class="d-flex">
            <div class="p-1">
              <%= f.select :search, options_for_select([["完全一致"], ["曖昧検索"]]) %>
              <%= f.select :range, options_for_select([["投稿"], ["エンドユーザー"], ["ジャンル"]]) %>
            </div>
            <div class="border p-1">
              <%= f.text_field :word, placeholder: "キーワード", style: "border: 0; outline: 0;" %>
              <%= f.button :type => "submit", style: "border-style: none; background: none;" do %>
              <i class="fas fa-magnifying-glass-plus"></i>
              <% end %>
            </div>
          </div>
          <% end %>
          <% else %>
          <%= form_with method: :get, url: search_path do |f| %>
          <%= f.hidden_field :range, :value => "ゲーム投稿" %>
          <%= f.hidden_field :search, :value => "曖昧検索" %>
          <div class="border p-1">
            <%= f.text_field :word, placeholder: "キーワード", style: "border: 0; outline: 0;" %>
            <%= f.button :type => "submit", style: "border-style: none: 0; background: 0;" do %>
            <i class="fas fa-magnifying-glass-plus"></i>
            <% end %>
          </div>
          <% end %>
          <% end %>
        </div>
    </div>
  </div>
</nav>